def country = "nigera"

pipeline {
	agent {
           node { label 'master'}
        }
        environment { CC = 'cloud' }
        parameters {
           string(name:'WHO', defaultValue: 'lorence', description: 'nothing')
        }
        stages { 
	    stage('build') {
                   input {
                      message " Should we"
                      ok" yes"
                   }
                   when { 
                        environment name: 'CC', value: 'cloud'
                   }
                   steps {
	             sh "echo ${country}" 
                     echo "${params.WHO}"
                     echo "$CC"
                }                 
            }
       }
       post {
           failure {
                   echo 'it failed'
	}
    }        
}

